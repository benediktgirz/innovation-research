    <!-- Scripts -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Auto-detect browser language and redirect on first visit
        function detectAndRedirectLanguage() {
          const currentLang = '{{ lang || "en" }}';
          const currentPath = window.location.pathname;

          // Check if user has already been redirected (to avoid redirect loops)
          const hasLanguagePreference = localStorage.getItem('language-preference');

          // Only auto-redirect if:
          // 1. User is on the root path (/) or English version
          // 2. User hasn't set a language preference yet
          // 3. User hasn't been redirected before in this session
          const isRootOrEnglish = currentPath === '/' || currentLang === 'en';

          if (!hasLanguagePreference && isRootOrEnglish) {
            // Get browser language
            const browserLang = navigator.language || navigator.userLanguage;
            const langCode = browserLang.toLowerCase().split('-')[0]; // Get first part (e.g., 'en' from 'en-US')

            // Supported languages
            const supportedLanguages = ['en', 'de', 'fr', 'es', 'it'];

            // Check if browser language is supported and different from current
            if (supportedLanguages.includes(langCode) && langCode !== currentLang) {
              // Set preference to avoid future auto-redirects
              localStorage.setItem('language-preference', langCode);

              // Redirect to detected language
              const targetPath = langCode === 'en' ? '/' : `/${langCode}/`;
              window.location.href = targetPath;
              return true; // Redirect initiated
            } else {
              // Set preference to current language (English or detected unsupported language defaults to English)
              localStorage.setItem('language-preference', currentLang || 'en');
            }
          }

          return false; // No redirect
        }

        // Try to detect and redirect - if redirect happens, skip other initialization
        if (detectAndRedirectLanguage()) {
          return;
        }

        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            const isHidden = mobileMenu.classList.contains('hidden');
            mobileMenu.classList.toggle('hidden');
            mobileMenuButton.setAttribute('aria-expanded', isHidden ? 'true' : 'false');

            // Toggle icons
            const openIcon = mobileMenuButton.querySelector('svg:first-of-type');
            const closeIcon = mobileMenuButton.querySelector('svg:last-of-type');
            if (openIcon && closeIcon) {
              if (isHidden) {
                openIcon.classList.add('hidden');
                openIcon.classList.remove('block');
                closeIcon.classList.remove('hidden');
                closeIcon.classList.add('block');
              } else {
                openIcon.classList.remove('hidden');
                openIcon.classList.add('block');
                closeIcon.classList.add('hidden');
                closeIcon.classList.remove('block');
              }
            }
          });
        }

        // Language dropdown toggle
        const languageButton = document.getElementById('language-menu-button');
        const languageDropdown = document.getElementById('language-dropdown');

        if (languageButton && languageDropdown) {
          languageButton.addEventListener('click', function() {
            languageDropdown.classList.toggle('hidden');
            const expanded = languageButton.getAttribute('aria-expanded') === 'true';
            languageButton.setAttribute('aria-expanded', !expanded);
          });

          // Close dropdown when clicking outside
          document.addEventListener('click', function(event) {
            if (!languageButton.contains(event.target) && !languageDropdown.contains(event.target)) {
              languageDropdown.classList.add('hidden');
              languageButton.setAttribute('aria-expanded', 'false');
            }
          });

          // Update language preference when user manually selects a language
          const languageOptions = languageDropdown.querySelectorAll('.language-option');
          languageOptions.forEach(option => {
            option.addEventListener('click', function(e) {
              const href = this.getAttribute('href');
              let selectedLang = 'en';

              if (href === '/de/') selectedLang = 'de';
              else if (href === '/fr/') selectedLang = 'fr';
              else if (href === '/es/') selectedLang = 'es';
              else if (href === '/it/') selectedLang = 'it';

              // Update preference when user manually switches
              localStorage.setItem('language-preference', selectedLang);
            });
          });
        }

        // Cookie Consent Management (copied from benedikt-girz.com)
        const cookieBanner = document.getElementById('cookie-banner');
        const acceptEssentialBtn = document.getElementById('accept-essential');
        const acceptAllBtn = document.getElementById('accept-all');

        function getCookie(name) {
          const value = `; ${document.cookie}`;
          const parts = value.split(`; ${name}=`);
          if (parts.length === 2) return parts.pop().split(';').shift();
          return null;
        }

        function setCookie(name, value, days) {
          const date = new Date();
          date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
          document.cookie = `${name}=${value}; expires=${date.toUTCString()}; path=/; SameSite=Lax`;
        }

        function updateGoogleAnalyticsConsent(hasConsent) {
          if (typeof gtag !== 'undefined') {
            gtag('consent', 'update', {
              'analytics_storage': hasConsent ? 'granted' : 'denied',
              'ad_storage': 'denied',
              'ad_user_data': 'denied',
              'ad_personalization': 'denied'
            });
          }
        }

        function hideBanner() {
          cookieBanner.classList.add('hidden');
        }

        // Check existing consent
        const existingConsent = getCookie('cookie-consent');
        if (existingConsent === null) {
          cookieBanner.classList.remove('hidden');
        } else {
          updateGoogleAnalyticsConsent(existingConsent === 'all');
        }

        // Handle button clicks
        if (acceptEssentialBtn) {
          acceptEssentialBtn.addEventListener('click', function() {
            setCookie('cookie-consent', 'essential', 365);
            updateGoogleAnalyticsConsent(false);
            hideBanner();
          });
        }

        if (acceptAllBtn) {
          acceptAllBtn.addEventListener('click', function() {
            setCookie('cookie-consent', 'all', 365);
            updateGoogleAnalyticsConsent(true);
            hideBanner();
          });
        }
      });
    </script>
