  "dependencies": {
    "@vercel/node": "^3.0.0",
    "fs-extra": "^11.0.0",
    "resend": "^6.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
