    <title>{{ title || site.title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="generator" content="Lume" />
    <meta name="robots" content="index,follow" />
    <meta name="referrer" content="origin" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/styles.css" />
    <script src="https://kit.fontawesome.com/8c8271362d.js" crossorigin="anonymous"></script>
  </head>
  <body class="font-sans text-[1.4em] leading-[1.8] tracking-[-0.011em] min-h-screen max-w-prose mx-auto pt-[max(env(safe-area-inset-top),3rem)] pb-[max(env(safe-area-inset-bottom),0.80rem)] px-[max(env(safe-area-inset-right),1.125rem)] flex flex-col">
    <header class="site-header">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container flex justify-end ">
          <a class="navbar-brand" href="/">
            <div class="-mt-[calc(3em-19px)] w-[135px] h-[76px] bg-accent border-t-[17px] border-[#b85544] text-center">
                <div class="text-2xl py-1 pt-[8px] pb-[15px] text-canvas font-light no-underline inline-block w-full">hirefrank</div>
            </div>
          </a>
          <ul class="flex space-x-4 ml-auto -mt-[calc(3em-30px)] text-[74%] font-medium">
            <li><a href="/about" class="text-on-canvas hover:text-accent no-underline">About</a></li>
            {{# <li><a href="/writings" class="text-on-canvas hover:text-accent no-underline">Writings</a></li> #}}
            <li><a href="/projects" class="text-on-canvas hover:text-accent no-underline">Projects</a></li>
            <li><a href="/services" class="text-on-canvas hover:text-accent no-underline">Services</a></li>
            {{# <li><a href="/speaking" class="text-on-canvas hover:text-accent no-underline">Speaking</a></li> #}}
          </ul>
        </div>
      </nav>
    </header>
    <main class="flex-grow flex items-center">
      <div class="container space-y-6">
        {{ content }}
      </div>
    </main>
    <footer class="text-[70%] text-on-canvas-dim mt-auto pt-4 pb-0">
      <div class="footer">
        <ul class="flex flex-wrap">
          <li class="mr-4">&copy; {{ new Date().getFullYear() }}</li>
          <li class="mr-4"><a href="https://github.com/hirefrank" class="hover:text-accent"><i class="fa-brands fa-github"></i></a></li>
          <li class="mr-4"><a href="https://instagram.com/hirefrank" class="hover:text-accent"><i class="fa-brands fa-instagram"></i></a></li>
          <li class="mr-4"><a href="https://twitter.com/hirefrank" class="hover:text-accent"><i class="fa-brands fa-twitter"></i></a></li>
          <li class="mr-4"><a href="https://www.linkedin.com/in/hirefrank/" class="hover:text-accent"><i class="fa-brands fa-linkedin"></i></a></li>
          <li><a href="mailto:frank@hirefrank.com?subject=Hi!" class="hover:text-accent"><i class="fa-solid fa-envelope"></i></a></li>
        </ul>
      </div>
